# TypeORM Synchronize (DEV: true, PROD: false)
TYPEORM_SYNCHRONIZE=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Server Port
PORT=3000
